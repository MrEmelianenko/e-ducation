<div class="page-header">
  <h1><%= t('.title') %></h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.teacher') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% grades.each do |grade| %>
      <tr>
        <td><%= link_to grade, grade %></td>
        <td><%= link_to grade.teacher.name_formatted, grade.teacher %></td>
      </tr>
    <% end %>
  </tbody>
</table>
