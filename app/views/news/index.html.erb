<div class="page-header">
  <h1><%= t('.title') %></h1>
</div>

<div class="decorated-list">
  <% news.each do |item| %>
    <div class="decorated-list-item">
      <h3><%= item.title %> <small class="text-muted text-small"><%= l(item.created_at, format: :short) %></small></h3>
      <div class="body"><%= item.body %></div>
    </div>
  <% end %>
</div>
