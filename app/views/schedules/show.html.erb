<div class="page-header">
  <h1><%= t('.title', name: schedule) %></h1>
</div>

<hr>

<h5>Предмет: <%= link_to schedule.subject, schedule.subject %></h5>
<h5>Преподаватель: <%= link_to schedule.user, schedule.user %></h5>

<hr>

<div class="page-sub-header">
  <h4>Список учеников</h4>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <td>Имя</td>
      <td width="20%" class="text-center">Присутствует</td>
      <td width="10%" class="text-center">Оценка</td>
    </tr>
  </thead>
  <tbody>
    <% schedule.schedule_users.each do |relation| %>
      <tr>
        <td><%= relation.user.name_formatted %></td>
        <td class="text-center"><input type="checkbox" checked></td>
        <td><input type="number" placeholder="–" class="form-control"></td>
      </tr>
    <% end %>
  </tbody>
</table>
